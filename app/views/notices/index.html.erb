<p id="notice"><%= notice %></p>

<div class="navbar-form navbar-right"><%= link_to 'Дать объявление', new_notice_path, :class => 'btn btn-primary' %></div>
<h5>* все обьявления проходят модерацию...см. Правила</h5>




<table class="table table-striped table-hover ">

 <thead>
    <tr>
	<th width="10%">Фото</th>
	<th width="40%">Объявление</th>
    <th width="10%">Фото</th>
	<th width="40%"><center>Объявление</center></th>
     </tr>
  </thead>
  
    <tbody>
 <h4>Последние объявления</h4>
  <% @notices.each_slice(2) do |a, b| %>
 	
    <tr>
     <td>
	 <div class='icon'><%= image_tag(a.avatar.url(:thumb), class: 'avatar', :size => 15) %></div>
	 </td>
	  
	  
	  <td><h4><%= link_to h(a.notice), notice_path(a.id) %> </h4>
	      <h6><%= a.text %> </h6>
	  </td>
	
	  <td>
	
	 <% if b!=nil%>
	 <div class='icon'><%= image_tag(b.avatar.url(:thumb), class: 'avatar', :size => 15) %></div>
	 </td>
	  
	  
	  <td><h4><%= link_to h(b.notice), notice_path(b.id) %></h4>
          <h6><%= link_to h(b.text), notice_path(b.id) %> </h6>
	  </td>
	  
	  <% end %>
	  
	 </tr>
  <% end %>
   </tbody>
</table>

 <%= paginate(@notices) %>
 


