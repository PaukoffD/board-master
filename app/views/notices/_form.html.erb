<%= simple_form_for [@city,@category, @notice] do |f| %>
  <%= f.error_notification %>

  
       
            <%= f.label "Тема:", class: 'control-label' %>
            <%= f.text_field :notice, class: 'form-control', input_html: { maxlength: 60 }, placeholder: "Не меньше 5 символов" %>
      

      
            <%= f.label "Текст объявления:", class: 'control-label' %>
            <%= f.text_area :text, class: 'form-control', rows: 3 , placeholder: "Не меньше 5 символов"%>
      
		</br>
		
		
        <%= f.label "Категория:  ", class: 'control-label' %>
		<%= f.select:category_id do %>
		 <% Category.walk_tree do |c1, level| %>
         <%=  "#{'-'*level}#{c1.name}" %>
        
         
         <%= content_tag(:option, "#{'--'*level}#{c1.name}") %>
       <% end %>
       <% end %>
             </br>
            <%= f.label "Цена:", class: 'control-label' %>
                
		    <%= f.text_field :price, class: 'form-control' %>
        
		
		   <p>* если не числовое значение, то цена=0</p>
            <%= f.association :city, label: "Город: ",  include_blank: true %>
			<p>* если вашего города нет в списке введите его в поле снизу</p>
			<%= simple_fields_for  :searchng do |q| %>
               <%= q.error_notification %>
               <%= q.text_field :w,  class: 'form-control' %>
			   
            <% end %>
        
				
		
            <%= f.label "Автор:", class: 'control-label' %>
            <%= f.text_field :name, class: 'form-control', input_html: { maxlength: 20 } %>
            
		
		
		
            <%= f.label "Email:", class: 'control-label' %>
            <%= f.text_field :email, class: 'form-control', input_html: { maxlength: 20 } %>
        
		
		
		
		
            <%= f.label "Телефон:", class: 'control-label' %>
            <%= f.text_field :phone, class: 'form-control', input_html: { maxlength: 10 } %>
        
		
		</br>
		</br>
	<form class="form-inline" role="form">
     <div class="form-group">
       <%= f.label " Фото:", class: 'col-sm-2 control-label'  %>
       <%= f.file_field :avatar %>
     </div>
      <div class="form-group">
       <%= f.label " Фото:", class: 'col-sm-2 control-label'  %>
       <%= f.file_field :avatar1 %>
     </div>   
     
	</br>
	
	  
            
            <%= f.input :storage_ads, label: "Срок объявления:  ", collection: 30..120, class: 'form-control', input_html: { maxlength: 3 } %>
   
	 
	 
	</br>	
           <%= f.submit 'Запомнить', class: 'btn btn-primary' %>
             
  </form>		
<% end %>
